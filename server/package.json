{
    "name": "smart-toilet-paper",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm-run-all build start:prod",
        "start:prod": "node ./dist/app.js",
        "start:dev": "nodemon",
        "lint": "eslint . --ext .ts",
        "build": "npm-run-all build:clean build:lint build:tsc build:copy",
        "build:clean": "rimraf dist/*",
        "build:lint": "yarn lint",
        "build:tsc": "tsc",
        "build:copy": "node bin/npm-scripts/copy.js",
        "debug:start": "npm-run-all build debug:start:prod",
        "debug:start:prod": "node --nolazy --inspect-brk=9229 ./dist/app.js",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts, html",
        "ignore": [
            "src/public"
        ],
        "exec": "yarn run lint && ./node_modules/.bin/ts-node -r tsconfig-paths/register ./src/app.ts"
    },
    "_moduleAliases": {
        "@": "dist"
    },
    "keywords": [],
    "author": "Mark Smith",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "shelljs": "^0.8.4",
        "typescript": "^3.8.3",
        "ws": "^8.5.0"
    },
    "devDependencies": {
        "@types/eslint": "^8.4.1",
        "@types/express": "^4.17.6",
        "@types/node": "^13.13.5",
        "@types/ws": "^8.5.2",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "eslint": "^8.10.0",
        "nodemon": "^2.0.3",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.13.0"
    }
}
